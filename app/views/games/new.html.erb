<div class="container py-3 w-50">
  <h2>New game</h2>

  <div class="d-flex py-3">
    <% @grid.each do |letter| %>
      <button type="button" class="btn btn-primary mx-1"><%= letter %></button>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false">
    <div class="input-group my-3">
        <input type="text" name="word" class="form-control" placeholder="What's the longest word you can find?">
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary">Play!</button>
        </div>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
  </form>
</div>
